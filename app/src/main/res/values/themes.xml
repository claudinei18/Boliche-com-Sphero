<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/theme_textview_style</item>
    </style>

    <style name="theme_textview_style" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/pink</item>
    </style>

    <!-- inherit from the material theme -->
    <style name="AppTheme2" parent="android:Theme.Material">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/blue_semi_transparent</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/pink</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/white</item>
    </style>


</resources>